<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="ls-table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Autor</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.category.category %></td>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post, :class => 'ls-btn' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'ls-btn' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'ls-btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, :class => 'ls-btn' %>
