<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="ls-table">
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category %></td>
        <td><%= link_to 'Show', category, :class => 'ls-btn' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => 'ls-btn' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'ls-btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => 'ls-btn' %>
